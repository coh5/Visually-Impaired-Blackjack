<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_blackjack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tnc16_coh5_d_r273.blind_blackjack.Blackjack">

    <!-- TODO: add a background image here -->
    <!-- TODO: add gesture based options as well, one tap == load tutorial, two taps == play blackjack -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="<SUBTITLE TEXT, introduction here?>"
        android:id="@+id/subtitleTextMain" />

    <Button
        android:id="@+id/loadTutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Tutorial"
        android:layout_below="@+id/subtitleTextMain"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="54dp" />

    <Button
        android:id="@+id/playBlackjack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Blackjack!"
        android:layout_below="@+id/loadTutorial"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="54dp" />

</RelativeLayout>
